<Window x:Class="BasicRunner.MetroThemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicRunner"
        xmlns:modern="http://modernwpf"
        mc:Ignorable="d"
        x:Name="theWindow"
        Title="ModernWpf.Metro Controls and Themes" Height="650" Width="650"
        ResizeMode="CanResizeWithGrip" 

        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 

        modern:DpiTool.AutoDpiScale="True"
        modern:DpiTool.DpiChange="Window_DpiChange">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/ModernWpf.Metro;component/Themes/BaseValues.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ModernWpf.Metro;component/Themes/ColorLight.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>
    <modern:Chrome.Chrome>
        <modern:Chrome></modern:Chrome>
    </modern:Chrome.Chrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <modern:FlyoutContainer x:Name="outerFlyoutBox"
                                Grid.RowSpan="3"></modern:FlyoutContainer>

        <modern:TitleBar x:Name="titleBar">
        </modern:TitleBar>

        <StackPanel Grid.Row="1" Margin="8">
            <TextBlock Text="This window demonstrates using the ModernWpf.Metro lib."
                       TextWrapping="Wrap"></TextBlock>
        </StackPanel>
        <TabControl TabStripPlacement="Left"
                    Grid.Row="2">
            <TabItem Header="Flyout">
                <modern:AnimatedContentControl>
                    <Grid>
                        <modern:FlyoutContainer x:Name="innerFlyoutBox"></modern:FlyoutContainer>
                        
                        <StackPanel HorizontalAlignment="Left">
                            <RadioButton Content="Use outer" GroupName="flyGroup" x:Name="flyOuter" IsChecked="True"></RadioButton>
                            <RadioButton Content="Use inner" GroupName="flyGroup" x:Name="flyInner"></RadioButton>
                            
                            <Button x:Name="btnMsgBox" Content="MessageBox replacements"
                                Margin="8" Click="btnMsgBox_Click"></Button>
                        </StackPanel>
                    </Grid>
                </modern:AnimatedContentControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
