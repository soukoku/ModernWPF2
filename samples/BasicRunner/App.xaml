<Application x:Class="BasicRunner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BasicRunner"
             xmlns:modern="http://modernwpf"
             StartupUri="LaunchWindow.xaml">
    <Application.Resources>
        <!--show case auto selecting between ideal/display text formatting-->
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="modern:UIHooks.AutoCrisp" Value="True"></Setter>
        </Style>
    </Application.Resources>
</Application>
